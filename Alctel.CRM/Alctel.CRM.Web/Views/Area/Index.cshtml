										<label class="form-check-label">
											Ativo
										</label>
									</div>
								</div>
							</td> *@
							<td>@item.Name</td>
							<td>
								@if (item.Active)
								{
									@:Ativado
								}
								else
								{
									@:Desativado
								}
							</td>
							<td align="left">
