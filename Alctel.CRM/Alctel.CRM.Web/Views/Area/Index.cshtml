@{
	var itemcounter = 0;
	string? baseUrl = ViewBag.BaseUrl;

	baseUrl = baseUrl == null ? string.Empty : baseUrl;
}

@model List<Alctel.CRM.Web.Models.AreaModel>

<div class="card">
	<div class="card-header">

		<div class="row">
			<div class="col-sm-9">
			</div>
			<div class="col-sm-3">
				@if (ViewBag.AlertFilter == "SHOW")
				{
					<div class="alert alert-danger alert-dismissible alert-small fade show" role="alert" id="userFilterMessage">
						Necessário preencher todos os campos da Pesquisa
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
				}
			</div>
		</div>

		<div class="row">
			<div class="row">
				<div class="col-sm-6">


					<svg xmlns="http://www.w3.org/2000/svg" class="bi bi-person-lines-fill" viewBox="0 0 16 16">
						<path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m-5 6s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zM11 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5m.5 2.5a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1zm2 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1zm0 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1z" />
					</svg>
					<label class="label-title">Área</label>


				</div>

				<div class="col-sm-3">
					<a class="btn btn-title-style" asp-area="" asp-controller="Area" asp-action="Create" title="Criar Área" type="_self">
						<svg xmlns="http://www.w3.org/2000/svg" class="bi bi-plus-circle" viewBox="0 0 16 16">
							<path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
							<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
						</svg>
					</a>
				</div>

				<div class="col-sm-3">
					<form method="post" asp-action="Index">
						<div style="display: inline-block;">
							<select id="searchAreaType" name="searchAreaType" aria-label="Áreas">
								<option selected>Tipo Filtro&nbsp;&nbsp;</option>
								<option value="area">Área</option>
								@* <option value="status">Status</option> *@
							</select>
						</div>
						<div style="display: inline-block;">
							<div class="input-group input-group-sm mb-3">
								<div>
									<input name="searchAreaText" id="searchAreaText" class="standard-input" type="text" aria-label="Search" value=""
										   aria-describedby="basic-addon2" style="border-radius: 7px;" minlength="3" autocomplete="off" />
								</div>
							</div>
						</div>
						<div style="display: inline-block;">
							<svg id="searchArea" xmlns="http://www.w3.org/2000/svg" class="bi bi-search" viewBox="0 0 16 16">
								<path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
							</svg>
						</div>

						<input type="submit" style="display: none;" />
					</form>
				</div>


			</div>
		</div>

	</div>



	<div class="card-body table-responsive">

		<table class="table table-striped table-sm" id="areaDataTable">
			<thead>
				<tr>
					<th scope="col">#</th>
					@* <th scope="col">Ativar/Desativar</th> *@
					<th scope="col">Área</th>
					<th scope="col">Status</th>
					<th scope="col"></th>
				</tr>
			</thead>
			<tbody>
				@if (Model != null && Model.Any())
				{
					@foreach (var item in Model)
					{
						{ itemcounter = itemcounter + 1; }
						<tr>
							<th scope="row">@itemcounter</th>
@* 							<td>
								<div class="form-check">
									<div class="form-check">
