@{
	int itemcounter = 1;
	string? baseUrl = Context.Session.GetString("BaseUrl");
	baseUrl = baseUrl == null ? string.Empty : baseUrl;
}

@model List<Alctel.CRM.Web.Models.SlaTicketConfigModel>

<div class="card">
	<div class="card-header">

		<div class="row">
			<div class="row">
				<div class="col-sm-6">


					<svg xmlns="http://www.w3.org/2000/svg" class="bi bi-person-lines-fill" viewBox="0 0 16 16">
						<path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m-5 6s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zM11 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5m.5 2.5a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1zm2 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1zm0 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1z" />
					</svg>
					<label class="label-title">SLA/Alertas</label>


				</div>

				<div class="col-sm-6">
					<a href="@baseUrl/SlaAlert/Create">Novo</a>
				</div>


			</div>
		</div>

	</div>

	<div class="card-body">

		<div class="card">
			<div class="card-header">
			</div>
			<div class="card-body">
				<table class="table table-striped table-sm">
					<thead>
						<tr>
							<th>#</th>
							<th>Chamado SLA</th>
							<th>Manifestação</th>
							<th>Serviço</th>
							<th>Criticidade</th>
							<th>Motivos</th>
							<th>SLA</th>
							<th>Alarme</th>
						</tr>
					</thead>
					<tbody>
						@if (Model != null && Model.Any())
						{
							@foreach (var item in Model)
							{
								<tr>
									<th scope="row">@itemcounter</th>
									<td>@item.SlaTicketId</td>
									<td>@item.ManifestationTypeName</td>
									<td>@item.ServiceName</td>
									<td>@item.Criticality</td>
									<td>@item.Reasons</td>
									@* <td><input type="text" asp-for="@item.Sla" /></td> *@
									<td>@item.Sla</td>
									<td>@item.Alarm</td>
								</tr>

								{ itemcounter = itemcounter + 1; }
							}
						}
					</tbody>
				</table>
			</div>
		</div>

	</div>
</div>

