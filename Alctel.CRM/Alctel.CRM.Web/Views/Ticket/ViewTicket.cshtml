						</div>
					</div>
				</div>

				@* 				<div class="col-sm-4">
					<label asp-for="@Model.DemandTypeId"></label>
					<div class="input-group input-group-sm mb-3">
						<div>
							<select asp-for="@Model.DemandTypeId"
