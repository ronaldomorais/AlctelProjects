@{
	var itemcounter = ViewBag.StartIndex;

	if (itemcounter == null)
	{
		itemcounter = 1;
	}

	List<int> previousFirstPages = (List<int>)ViewBag.PreviousFirstPages;
	List<int> nextLastPages = (List<int>)ViewBag.NextLastPages;
	string? baseUrl = ViewBag.BaseUrl;

	baseUrl = baseUrl == null ? string.Empty : baseUrl;
}

@model List<Alctel.CRM.Web.Models.CustomerModel>

