					<form method="post" asp-action="Search">
						<div style="display: inline-block;">
							<select id="searchCustomerType" name="searchCustomerType" aria-label="Perfil">
								<option selected>Tipo Filtro&nbsp;&nbsp;</option>
								<option value="nome_completo">Nome</option>
								<option value="email_principal">Email</option>
								<option value="cpf">Cpf</option>
								<option value="telefone_principal">Telefone</option>
