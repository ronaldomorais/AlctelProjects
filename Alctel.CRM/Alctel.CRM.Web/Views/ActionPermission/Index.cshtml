@{
    var itemcounter = 0;
}

@model List<Alctel.CRM.Web.Models.ActionPermissionModel>

<div class="card">
    <div class="card-header">

        <div class="row">
            <div class="col-sm-6">   
                <svg xmlns="http://www.w3.org/2000/svg" class="bi bi-person-fill-gear" viewBox="0 0 16 16">
