@{
	var itemcounter = ViewBag.StartIndex;

	if (itemcounter == null)
	{
		itemcounter = 1;
	}
	string? baseUrl = Context.Session.GetString("BaseUrl");
	baseUrl = baseUrl == null ? string.Empty : baseUrl;

	string screenMessage = ViewBag.ScreenMessage;

	screenMessage = screenMessage ?? string.Empty;

}

@model List<Alctel.CRM.Web.Models.TicketClassificationListModel>

<div class="card">
	<div class="card-header">
		<div class="row">
			<div class="col-sm-12">
				@if (string.IsNullOrEmpty(screenMessage) == false)
				{
					@if (screenMessage.Contains("ERRO"))
					{
						<div class="alert alert-danger alert-dismissible alert-small fade show" role="alert" id="userFilterMessage">
							@screenMessage
							<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
						</div>

					}
					else
					{
						<div class="alert alert-success alert-dismissible alert-small fade show" role="alert" id="userFilterMessage">
							@screenMessage
							<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
						</div>

					}
				}
			</div>
		</div>
		<div class="row">
			<div class="col-sm-6">

				<svg xmlns="http://www.w3.org/2000/svg" class="bi bi-person-lines-fill" viewBox="0 0 16 16">
					<path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m-5 6s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zM11 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5m.5 2.5a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1zm2 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1zm0 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1z" />
				</svg>
				<label class="label-title">Configuração de Listas</label>


			</div>
			<div class="col-sm-3">
				<div class="col-sm-3">
					<button type="button" class="btn btn-link" data-bs-toggle="modal" data-bs-target="#ticketClassificationListModal">
						Nova Lista
					</button>
				</div>
			</div>
		</div>

	</div>

	<div class="card-body table-responsive">
		<table class="table table-striped table-sm" id="ticketDataTable">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Nome</th>
					<th scope="col">Ação</th>
				</tr>
			</thead>
			<tbody>

				@if (Model != null && Model.Any())
				{
					@foreach (var item in Model)
					{
						<tr>
							<th scope="row">@itemcounter</th>
							<td>@item.Name</td>
							<td>
								<a href="@baseUrl/TicketClassificationListItem/Index/?id=@item.Id">Acessar Itens</a>
							</td>
						</tr>

						{ itemcounter = itemcounter + 1; }
					}
				}

			</tbody>
		</table>

	</div>

	<div class="modal fade" id="ticketClassificationListModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
		 aria-labelledby="ticketClassificationListModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-xl">
			<div class="modal-content">
				<div class="modal-header">
					<h1 class="modal-title fs-5">Classificação Adicionar Lista</h1>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<div class="card">
						<div class="card-header">

							<svg xmlns="http://www.w3.org/2000/svg" class="bi bi-person-lines-fill" viewBox="0 0 16 16">
								<path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m-5 6s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zM11 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5m.5 2.5a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1zm2 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1zm0 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1z" />
							</svg>
							<label class="label-title">Adicionar nova lista</label>

						</div>

						<div class="card-body">
							<div class="row">
								<form method="post" action="@baseUrl/TicketClassificationList/Create">
									<div class="form-control-sm">
										<label for="listNameId">Nome da Lista:</label>
										<input class="standard-input" type="text" id="listName" name="listName" required />
									</div>
									<div style="margin-left: 8px;">
										<button type="submit" class="btn btn-style">Criar</button>
									</div>
								</form>
							</div>
						</div>

					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
				</div>
			</div>
		</div>
	</div>

</div>
