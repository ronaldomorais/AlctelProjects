				<label asp-for="@Model.ListItemName"></label>
				<input type="hidden" asp-for="@Model.ListItemId" />
				<select asp-for="@Model.ListItemName" asp-items="@Model.ListItemOptions">
				</select>
			</div> *@

		</div>

	</div>

</div>

@section Scripts {
	<script src="~/js/ticketClassification.js"></script>
}