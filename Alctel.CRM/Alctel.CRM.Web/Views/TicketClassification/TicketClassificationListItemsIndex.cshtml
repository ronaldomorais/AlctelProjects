@model List<Alctel.CRM.Web.Models.TicketClassificationListItemsModel>

@{
	Layout = null;

	var itemcounter = 0;
	string? baseUrl = Context.Session.GetString("BaseUrl");
	baseUrl = baseUrl ?? string.Empty;
}

<div class="card">
	<div class="card-header">

		<h5 class="mb-0">
			<svg xmlns="http://www.w3.org/2000/svg" class="bi bi-person-lines-fill" viewBox="0 0 16 16">
				<path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m-5 6s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zM11 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5m.5 2.5a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1zm2 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1zm0 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1z" />
			</svg>
			<button class="btn btn-title-style" type="button" data-toggle="collapse"
					data-bs-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
				Configuração de Listas
			</button>
		</h5>
	</div>

	<div class="card-body table-responsive">

		<table class="table table-striped table-sm" id="areaDataTable">
			<thead>
				<tr>
					<th scope="col">#</th>
					@* <th scope="col">Ativar/Desativar</th> *@
					<th scope="col">Item</th>
					<th scope="col">Status</th>
					<th scope="col"></th>
				</tr>
			</thead>
			<tbody>
				@if (Model != null && Model.Any())
				{
					@foreach (var item in Model)
					{
						{ itemcounter = itemcounter + 1; }
						<tr>
							<th scope="row">@itemcounter</th>
							@* 							<td>
								<div class="form-check">
									<div class="form-check">
										<input class="form-check-input" type="checkbox" name="@item.Name" id="@item.Id" checked="@item.Active" onchange="tools.HelpMethods.ChangeStatusSendForm(this)">
										<label class="form-check-label">
											Ativo
										</label>
									</div>
								</div>
							</td> *@
							<td>@item.Name</td>
							<td>
								@if (item.Status)
								{
									@:Ativado
								}
								else
								{
									@:Desativado
								}
							</td>
							<td align="left">
								@* 								<form method="get" asp-action="Edit">
									<input type="hidden" name="id" value=@item.Id />
									<button type="submit" class="btn btn-style">
										<svg xmlns="http://www.w3.org/2000/svg" class="bi bi-pencil-fill" viewBox="0 0 16 16">
											<path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z" />
										</svg>
									</button>
								</form> *@
								<a href="@baseUrl/TicketClassification/Edit/?id=@item.Id">Editar</a>
							</td>
							@* 					<td>
								<form method="get" asp-action="Delete">
									<input type="hidden" name="id" value=@item.Id />
									<button type="submit" class="btn btn-style">
										<svg xmlns="http://www.w3.org/2000/svg" class="bi bi-trash3" viewBox="0 0 16 16">
											<path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5" />
										</svg>
									</button>
								</form>
							</td> *@
						</tr>
					}
				}
			</tbody>
		</table>

	</div>
</div>


