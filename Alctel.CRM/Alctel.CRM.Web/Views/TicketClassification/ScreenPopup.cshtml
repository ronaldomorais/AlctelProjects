@{
	Layout = null;
}

@model Alctel.CRM.Web.Models.TicketClassificationModel;

<div class="card">
	<div class="card-header">

		<h5 class="mb-0">
			<svg xmlns="http://www.w3.org/2000/svg" class="bi bi-person-lines-fill" viewBox="0 0 16 16">
				<path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m-5 6s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zM11 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5m.5 2.5a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1zm2 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1zm0 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1z" />
			</svg>
			<button class="btn btn-title-style" type="button" data-toggle="collapse"
					data-bs-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
				Classificação de Chamado
			</button>
		</h5>
	</div>

	<div class="card card-body">

		<div class="row smal mb-3">
			<div class="col-sm-3">
				<label asp-for="@Model.ManifestationTypeId"></label>
				<div class="input-group input-group-sm mb-3">
					<div>
						<select asp-for="@Model.ManifestationTypeId" asp-items="@Model.ManifestationTypeOptions" onchange="ticketClassification.Events.OnManifestationTypeChanged();">
						</select>
					</div>
				</div>
			</div>

			<div id="serviceUnitDivId" class="col-sm-3" style="display:none;">
				<label asp-for="@Model.ServiceUnitId"></label>
				<div class="input-group input-group-sm mb-3">
					<div>
						<select asp-for="@Model.ServiceUnitId" asp-items="@Model.ServiceUnitOptions" onchange="ticketClassification.Events.OnServiceUnitChanged();">
						</select>
					</div>
				</div>
			</div>

			<div id="serviceDivId" class="col-sm-3" style="display:none;">
				<label asp-for="@Model.ServiceId"></label>
				<div class="input-group input-group-sm mb-3">
					<div>
						<select asp-for="@Model.ServiceId" asp-items="@Model.ServiceOptions" onchange="ticketClassification.Events.OnServiceChanged();">
						</select>
					</div>
				</div>
			</div>

			<div id="programDivId" class="col-sm-3" style="display:none;">
				<label asp-for="@Model.ProgramId"></label>
				<div class="input-group input-group-sm mb-3">
					<div>
						<input asp-for="@Model.ProgramId" class="standard-input" type="hidden" />
						<input asp-for="@Model.ProgramName" class="standard-input" type="text" readonly style="background-color:#E2E8F0;" />
					</div>
				</div>
			</div>
		</div>

		<div class="row smal mb-3">
			<div id="reason01DivId" class="col-sm-5" style="display:none;">
				<label asp-for="@Model.Reason01ListItemId"></label>
				<div class="input-group input-group-sm mb-3">
					<div>
						<input type="hidden" asp-for="@Model.Reason01Id" />
						<input type="hidden" asp-for="@Model.Reason01ListId" />
						<input type="hidden" asp-for="@Model.Reason01ListName" />
						<select asp-for="@Model.Reason01ListItemId" onchange="ticketClassification.Events.OnReason01Changed();">
						</select>
					</div>
				</div>
			</div>


			<div id="reason02DivId" class="col-sm-5" style="display:none;">
				<label asp-for="@Model.Reason01ListItemId"></label>
				<div class="input-group input-group-sm mb-3">
					<div>
						<input type="hidden" asp-for="@Model.Reason02Id" />
						<input type="hidden" asp-for="@Model.Reason02ListId" />
						<input type="hidden" asp-for="@Model.Reason02ListName" />
						<select asp-for="@Model.Reason01ListItemId">
						</select>
					</div>
				</div>
			</div>
		</div>

		<button id="btnAddClassificationId" type="button" class="btn btn-style" onclick="ticketClassification.Events.OnAddClassification();" disabled="disabled">Adicionar</button>

	</div>
</div>
