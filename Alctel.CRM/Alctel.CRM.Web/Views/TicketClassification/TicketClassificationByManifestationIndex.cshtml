@{
	Layout = null;
	int itemcounter = 1;
}

@model List<Alctel.CRM.Web.Models.TicketClassficationListModel>;

<div class="card">
	<div class="card-header">

		<div class="row">
			<div id="messageError" class="alert alert-danger" role="alert" style="display:none;">
				
			</div>
			<div id="messageSuccess" class="alert alert-success" role="alert" style="display:none;">
				Serviço Atualizado!
			</div>
		</div>

		<div class="row">
			<div class="col-sm-6">

				<svg xmlns="http://www.w3.org/2000/svg" class="bi bi-person-lines-fill" viewBox="0 0 16 16">
					<path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m-5 6s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zM11 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5m.5 2.5a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1zm2 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1zm0 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1z" />
				</svg>
				<label class="label-title">Classificações</label>


			</div>
		</div>

	</div>

	<div class="card-body table-responsive">

		<div class="row" style="margin-bottom:10px;">
			<div class="col-sm-12">
				<table class="table table-striped table-sm">
					<thead>
						<tr>
							<th scope="col">#</th>
							<th scope="col">Manifestação</th>
							<th scope="col">Serviço</th>
							<th scope="col">Programa</th>
							<th scope="col">Motivos</th>
							<th scope="col">Ativado/Desativado</th>
						</tr>
					</thead>
					<tbody>

						@if (Model != null && Model.Any())
						{
							@foreach (var item in Model)
							{
								<tr>
									<th scope="row">@itemcounter</th>
									<td>@item.ManifestationTypeName</td>
									<td>@item.ServiceName</td>
									<td>@item.ProgramName</td>
									<td>@item.Reasons</td>
									<td>
										@if (item.Active)
										{
											<div class="form-check">
												<input class="form-check-input" type="checkbox" value="" id="serviceid_@itemcounter" checked onchange="ticketClassificationConfig.Events.OnServiceCheckChanged('@item.ServiceId', 'serviceid_@itemcounter');">
@* 												<label class="form-check-label" for="flexCheckChecked">
													Checked checkbox
												</label> *@
											</div>
										}
										else
										{
											<div class="form-check">
												<input class="form-check-input" type="checkbox" value="" id="serviceid_@itemcounter"  onchange="ticketClassificationConfig.Events.OnServiceCheckChanged('@item.ServiceId', 'serviceid_@itemcounter');">
												@* 												<label class="form-check-label" for="flexCheckChecked">
													Checked checkbox
												</label> *@
											</div>
										}

									</td>
								</tr>

								{ itemcounter = itemcounter + 1; }
							}
						}

					</tbody>
				</table>
			</div>
		</div>
	</div>

</div>


@section Scripts {
	<script src="~/js/ticketClassificationConfig.js"></script>
}