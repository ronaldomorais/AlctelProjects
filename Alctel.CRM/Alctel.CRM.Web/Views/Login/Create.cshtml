						if (data !== undefined) {
							isAuthenticated = data.isAuthenticated



							if (isAuthenticated) {
								// alert(href.replace("Login/Create", `Home/Index`))
								window.location.href = href.replace("Login/Create", `Home/Index`)
							}
						}
					}

					if (isAuthenticated == false) {
						alert('Falha de login')
					}
				},
				null,
				"json"
			);

		}
	</script>
}